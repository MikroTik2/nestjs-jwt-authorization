# Environment Configuration (development, production, etc.)
NODE_ENV='development'

# Application Settings
APPLICATION_PORT=3000 # Port on which the application runs
APPLICATION_URL='http://localhost:3000' # Base URL of the application
ALLOWED_ORIGIN='http://localhost:5000' # Allowed origin for CORS

# JWT Token Secrets
ACCESS_SECRET='your_access_secret' # Secret key for access tokens
REFRESH_SECRET='your_refresh_secret' # Secret key for refresh tokens
ACCESS_EXPIRE_TIME=10800000 # Access token expiration time (in ms)
REFRESH_EXPIRE_TIME=604800000 # Refresh token expiration time (in ms)

# Database Configuration (MongoDB)
DB_URI='your_mongodb_connection_string' # MongoDB connection string
DB_HOST='your_mongodb_host' # MongoDB host
DB_NAME='your_database_name' # Database name
DB_USER='your_mongodb_username' # MongoDB username
DB_PASSWORD='your_mongodb_password' # MongoDB password

# Cloudinary Configuration (Image Storage)
CLOUDINARY_API_KEY='your_cloudinary_api_key' # Cloudinary API key
CLOUDINARY_API_NAME='your_cloudinary_cloud_name' # Cloudinary cloud name
CLOUDINARY_API_SECRET='your_cloudinary_api_secret' # Cloudinary API secret

# Redis Configuration
REDIS_USER='your_redis_user' # Redis username
REDIS_PASSWORD='your_redis_password' # Redis password
REDIS_HOST='your_redis_host' # Redis host
REDIS_PORT=your_redis_port # Redis port (e.g., 6379)
REDIS_URI='your_redis_uri' # Redis connection URI

# Email Settings (SMTP)
MAIL_USER='your_email@example.com' # Email login
MAIL_PASS='your_email_password' # Email password (use App Password if possible)
MAIL_SERVICE='gmail' # Email service (e.g., gmail)
MAIL_HOST='smtp.gmail.com' # SMTP server
MAIL_PORT=587 # SMTP port (usually 587 for TLS)

# OAuth Configuration - Google
GOOGLE_CLIENT_ID='your_google_client_id' # Google OAuth client ID
GOOGLE_CLIENT_SECRET='your_google_client_secret' # Google OAuth client secret

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID='your_github_client_id' # GitHub OAuth client ID
GITHUB_CLIENT_SECRET='your_github_client_secret' # GitHub OAuth client secret